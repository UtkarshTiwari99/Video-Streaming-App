<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".uploadFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- TODO: Update blank fragment layout -->
        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImages"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/profiles"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.divider.MaterialDivider
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/profileImages"
                    android:layout_height="2dp" />

               <com.google.android.material.button.MaterialButton android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:text="Profile"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileImages" />
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/profile"
                    android:layout_height="2dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/upload"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:text="Upload"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile" />
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/upload"
                    android:layout_height="2dp">
                </com.google.android.material.divider.MaterialDivider>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
</FrameLayout>