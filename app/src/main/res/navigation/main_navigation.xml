<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.myapplication.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_videoRecyclerView"
            app:destination="@id/videoRecyclerView" />
        <action
            android:id="@+id/action_homeFragment_to_videoFragment"
            app:destination="@id/videoFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.myapplication.searchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search"
        />
    <fragment
        android:id="@+id/uploadFragment"
        android:name="com.example.myapplication.uploadFragment"
        android:label="fragment_upload"
        tools:layout="@layout/fragment_upload" />
    <fragment
        android:id="@+id/videoRecyclerView"
        android:name="com.example.myapplication.videoRecyclerView"
        android:label="fragment_video_recycler_view"
        tools:layout="@layout/fragment_video_recycler_view" />
    <fragment
        android:id="@+id/videoFragment"
        android:name="com.example.myapplication.videoFragment"
        android:label="fragment_video"
        tools:layout="@layout/fragment_video" />

</navigation>